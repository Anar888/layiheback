                        </a>
                    </div>
                    <div class="brand-item">
                        <a href="@Model.Settings["PumaUrl"]">
                            <img style="width:100px" src="~/assets/img/brand/@Model.Settings["PumaImage"]" alt="brand image">
                        </a>
                    </div>
                    <div class="brand-item">
                        <a href="@Model.Settings["JordanUrl"]">
                            <img style="width:100px" src="~/assets/img/brand/@Model.Settings["JordanImage"]" alt="brand image">
                        </a>
                    </div>
                    <div class="brand-item">
                        <a href="@Model.Settings["ReebokUrl"]">
                            <img style="width:100px" src="~/assets/img/brand/@Model.Settings["ReebokImage"]" alt="brand image">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- brand area end -->

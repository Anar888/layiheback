@model HomeViewModel
<!-- hero slider section start -->
<section class="hero-slider">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                    @foreach (var item in Model.Sliders)
                    {
        <div class="hero-single-slide">
            <div class="hero-slider-item bg-img" data-bg="assets/img/slider/@item.BackImage">
                <div class="hero-slider-content slide-1">
                    <h5 class="slide-subtitle">@item.SubTitle</h5>
                    <h2 class="slide-title">@item.Title</h2>
                    <p class="slide-desc">@item.Descrption</p>
                    <a href="shop.html" class="btn btn-hero">@item.BtnText</a>
                </div>
            </div>
        </div>}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- hero slider section end -->
<!-- service features start -->
<section class="service-policy-area">
    <div class="container">
        <div class="row">

            @foreach (var item in Model.Policies)
            {
<div class="col-lg-4">
    <div class="service-policy-item mt-30 bg-1">
        <div class="policy-icon">
            <img src="~/assets/img/icon/@item.Icon" alt="policy icon">
        </div>
        <div class="policy-content">
            <h5 class="policy-title">@item.Title</h5>
            <p class="policy-desc">@item.Desc</p>
        </div>
    </div>
</div>      }

        </div>
    </div>
</section>
<!-- service features end -->
<!-- our product area start -->
<section class="our-product section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">Our Product</h2>
                    <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                    @foreach (var item in Model.Products)
                    {
                        <div class="product-item mb-50">
                        <div class="product-thumb">
                        <a href="product-details.html">
                            <img src="~/assets/img/product/@item.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
                        </a>
                          </div>
                        <div class="product-content">
                        <h5 class="product-name">
                            <a href="product-details.html">@item.Name</a>
                        </h5>
                        <div class="price-box">
                            <span class="price-regular">$@((item.SalePrice* (1- item.DiscountPercent/100)).ToString("0.00"))</span>
                            <span class="price-old"><del>$@item.SalePrice</del></span>
                        </div>
                        <div class="product-action-link">
                            <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                            <a href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                            <a asp-action="getproduct" asp-controller="product" asp-route-id="@item.Id" class="open-product-modal">
                               <i class="ion-ios-eye-outline"></i>
                            </a>
                        </div>
                         </div>
                </div>}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- our product area end -->
<!-- banner statistic area start -->
<div class="banner-statistics">
    <div class="container">
        <div class="row no-gutters mtn-30">
            @foreach (var item in Model.Banners)
            {
<div class="col-md-6">
    <div class="img-container mt-30">
        <a href="@item.RedirectUrl">
            <img src="~/assets/img/banner/@item.BackImage" alt="banner-image">
        </a>
        <div class="banner-text">
            <h5 class="banner-subtitle">@item.SubTitle</h5>
            <h3 class="banner-title">@item.Title1<br>@item.Title2</h3>
        </div>
    </div>
</div>      }

        </div>
    </div>
</div>
<!-- banner statistic area end -->
<!-- top seller area start -->
<section class="top-seller-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">top seller</h2>
                    <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-5">
                <div class="product-banner">
                    <a href="#">
                        <img src="~/assets/img/banner/banner-3.jpg" alt="product banner">
                    </a>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7 col-md-7">
                <div class="top-seller-carousel slick-row-15 mtn-30">
                    @foreach (var item in Model.Topseller)
                    {
        <div class="slide-item">
            <div class="pro-item-small mt-30">
                <div class="product-thumb">
                    <a href="product-details.html">
                        <img src="~/assets/img/product/@item.ProductImages.FirstOrDefault(x=>x.PosterStatus==true)?.Image" alt="">
                    </a>
                </div>
                <div class="pro-small-content">
                    <h6 class="product-name">
                        <a href="product-details.html">@item.Name</a>
                    </h6>
                    <div class="price-box">
                        <span class="price-regular">$@((item.SalePrice* (1- item.DiscountPercent/100)).ToString("0.00"))</span>
                        <span class="price-old"><del>$@item.SalePrice</del></span>
                    </div>
                    <div class="ratings">
                        <span><i class="ion-android-star"></i></span>
                        <span><i class="ion-android-star"></i></span>
                        <span><i class="ion-android-star"></i></span>
                        <span><i class="ion-android-star"></i></span>
                        <span><i class="ion-android-star"></i></span>
                    </div>
                    <div class="product-link-2">
                        <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                        <a href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                        <a class="open-product-modal" asp-action="GetProduct" asp-route-id="@item.Id" asp-controller="Product" >
                            <span><i class="ion-ios-eye-outline"></i></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>}

                </div>
            </div>
        </div>
    </div>
</section>
<!-- top seller area end -->
<!-- latest blog area start -->
<section class="latest-blog-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <h2 class="title">our blog</h2>
                    <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="blog-carousel-active slick-row-15">

                    @foreach (var item in Model.Blogs)
                    {
        <div class="blog-post-item">
            <div class="blog-thumb">
                <a href="@item.RedirectUrl">
                    <img src="~/assets/img/blog/@item.Image" alt="blog thumb">
                </a>
            </div>
            <div class="blog-content">
                <h5 class="blog-title">
                    <a href="@item.RedirectUrl">
                        @item.Title
                    </a>
                </h5>
                <ul class="blog-meta">
                    <li><span>By: </span>@item.ByWho,</li>
                    <li><span>On: </span>@item.Date.ToString("dd-MM-yyyy")</li>
                </ul>
                <a href="@item.RedirectUrl" class="read-more">Read More...</a>
            </div>
        </div>}

                </div>
            </div>
        </div>
    </div>
</section>
<!-- latest blog area end -->
<!-- brand area start -->
